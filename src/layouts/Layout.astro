---
import {config} from "../config/config.ts";
import type {LayoutProps} from "../types/LayoutProps";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import BlueLink from "../components/BlueLink.astro";

const companyName = config.companyName;
const {title, description}: LayoutProps = Astro.props;
---

<html lang="es" class="light h-full">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description || "Page Description"} />
    <title>{companyName}{" | " + title ?? companyName}</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      crossorigin="anonymous"
    />
  </head>
  <body
    class="font-sans bg-gray-100 dark:bg-gray-900 text-gray-900 dark:text-white flex flex-col min-h-screen"
  >
    <Header title={title} />
    <main class="flex-grow mx-auto container md:mb-10">
      <slot />
    </main>
    <Footer />
    <BlueLink />
  </body>
</html>
