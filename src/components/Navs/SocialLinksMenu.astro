---
const {es} = Astro.props;

interface SocialLink {
  href: string;
  icon: string;
}
---

<div class="flex justify-start mt-5 space-x-4">
  <h3 class="font-bold mx-2">{es.links}</h3>

  {
    es.socialLinks.map((social: SocialLink) => (
      <a
        href={social.href}
        target="_blank"
        rel="noopener noreferrer"
        class="text-gray-600 dark:text-gray-100 hover:text-primary-light dark:hover:text-primary-dark"
      >
        <i class={social.icon} />
      </a>
    ))
  }
</div>
