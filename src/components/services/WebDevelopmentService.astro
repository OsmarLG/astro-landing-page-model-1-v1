---
import CallToActionContact from "../buttons/CallToActionContact.astro";
const {title} = Astro.props;
---

<section class="py-16 bg-gray-50 dark:bg-gray-900">
  <div class="max-w-7xl px-4 mx-auto sm:px-6 lg:px-8">
    <div class="grid items-center gap-y-10 gap-x-10 md:grid-cols-2">
      <!-- Sección de las imágenes ajustadas para visualización clara -->
      <div class="grid grid-cols-2 gap-4">
        <div>
          <img
            class="object-cover w-full h-auto rounded-md shadow-lg transform transition-transform duration-300 hover:scale-105"
            src="https://images.pexels.com/photos/39284/macbook-apple-imac-computer-39284.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
            alt="Web development services"
          />
        </div>
        <div>
          <img
            class="object-cover w-full h-auto rounded-md shadow-lg transform transition-transform duration-300 hover:scale-105"
            src="https://images.pexels.com/photos/2102416/pexels-photo-2102416.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
            alt="Successful web projects"
          />
        </div>
      </div>

      <!-- Sección de texto explicativo -->
      <div>
        <!-- Decorador superior -->
        <div class="absolute top-0 left-0 w-16 h-1 bg-orange-500"></div>

        <h2
          class="text-3xl font-bold leading-tight text-black dark:text-white sm:text-4xl lg:text-5xl mt-6"
        >
          {title}
        </h2>
        <p
          class="mt-4 text-base leading-relaxed text-gray-600 dark:text-gray-300"
        >
          Ofrecemos desarrollo de sitios web y aplicaciones modernas,
          optimizadas para rendimiento, seguridad y escalabilidad.
        </p>
        <ul class="list-disc pl-6 mt-6 text-gray-700 dark:text-gray-300">
          <li>Desarrollo de sitios web personalizados.</li>
          <li>Optimización para SEO y rendimiento.</li>
          <li>Diseño adaptable para dispositivos móviles.</li>
          <li>Integración de soluciones de comercio electrónico.</li>
        </ul>

        <!-- Botón de llamada a la acción modularizado -->
        <div class="mt-8">
          <CallToActionContact />
        </div>
      </div>
    </div>
  </div>
</section>
