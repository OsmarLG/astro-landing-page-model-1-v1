---
import {about} from "../../data/about";
---

<section
  class="pt-10 overflow-hidden bg-gray-50 dark:bg-gray-900 md:pt-0 sm:pt-16 2xl:pt-16"
>
  <div class="px-4 mx-auto sm:px-6 lg:px-8 max-w-7xl">
    <div class="grid items-center grid-cols-1 md:grid-cols-2">
      <div>
        <div class="relative">
          <div
            class="absolute top-0 left-0 w-16 h-1 bg-primary-light dark:bg-primary-dark"
          >
          </div>
          <h2
            class="text-3xl font-bold leading-tight text-black dark:text-white sm:text-4xl lg:text-5xl"
          >
            {about.section1.title}
          </h2>
        </div>

        <p
          class="max-w-lg mt-3 text-xl leading-relaxed text-gray-600 dark:text-gray-300 md:mt-8 text-justify"
        >
          {about.section1.description}
        </p>

        <div class="relative">
          <p class="mt-4 text-xl text-gray-600 dark:text-gray-300 md:mt-8">
            <span class="relative inline-block">
              <span
                class="absolute inline-block w-full bottom-0.5 h-[1px] bg-yellow-300"
              ></span>
              <span class="relative">{about.section1.question}</span>
            </span>
            <br class="block sm:hidden" />Ask me on
            <a
              href={about.section1.socialLink.url}
              target="_blank"
              title={about.section1.socialLink.text}
              class="transition-all duration-200 text-green-500 hover:text-green-600 hover:underline"
            >
              {about.section1.socialLink.type}
            </a>
          </p>

          <!-- Rayita decorativa abajo a la derecha -->
          <div
            class="absolute bottom-0 right-0 w-16 h-1 bg-primary-light dark:bg-primary-dark"
          >
          </div>
        </div>
      </div>

      <div class="relative">
        <img
          class="absolute inset-x-0 bottom-0 -mb-48 -translate-x-1/2 left-1/2"
          src={about.section1.blobShapeUrl}
          alt=""
        />

        <img
          class="relative w-full xl:max-w-lg xl:mx-auto 2xl:origin-bottom 2xl:scale-110"
          src={about.section1.imageUrl}
          alt=""
        />
      </div>
    </div>
  </div>
</section>
