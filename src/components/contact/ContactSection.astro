---
import {config} from "../../config/config.ts";
import {about} from "../../data/about.ts";
---

<section
  class="py-10 bg-gradient-to-r from-blue-500 to-indigo-600 dark:bg-gray-900 sm:py-16 lg:py-24"
>
  <div class="px-4 mx-auto sm:px-6 lg:px-8 max-w-7xl">
    <div
      class="max-w-6xl mx-auto mt-12 overflow-hidden bg-white dark:bg-gray-800 rounded-lg shadow-xl lg:mt-20"
    >
      <div class="grid items-stretch grid-cols-1 lg:grid-cols-5">
        <!-- Formulario de contacto -->
        <div class="lg:col-span-3">
          <div class="p-6 sm:p-10">
            <h3 class="text-2xl font-semibold text-black dark:text-white">
              Send us a message
            </h3>

            <form
              id="contactForm"
              action="https://formsubmit.co/osmar2001lg@gmail.com"
              method="POST"
              class="mt-8"
              onsubmit="return validateForm()"
            >
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-x-5 gap-y-4">
                <div>
                  <label
                    class="text-base font-medium text-gray-900 dark:text-gray-200"
                  >
                    Your name
                  </label>
                  <div class="mt-2.5 relative">
                    <input
                      type="text"
                      name="name"
                      class="block w-full px-4 py-4 text-black dark:text-white placeholder-gray-500 dark:placeholder-gray-300 transition-all duration-200 border border-gray-200 dark:border-gray-700 rounded-md bg-gray-50 dark:bg-gray-900 focus:outline-none focus:border-blue-600 focus:bg-white dark:focus:bg-gray-800"
                      minlength="5"
                      required
                    />
                  </div>
                </div>

                <div>
                  <label
                    class="text-base font-medium text-gray-900 dark:text-gray-200"
                  >
                    Your email
                  </label>
                  <div class="mt-2.5 relative">
                    <input
                      type="email"
                      name="email"
                      id="email"
                      class="block w-full px-4 py-4 text-black dark:text-white placeholder-gray-500 dark:placeholder-gray-300 transition-all duration-200 border border-gray-200 dark:border-gray-700 rounded-md bg-gray-50 dark:bg-gray-900 focus:outline-none focus:border-blue-600 focus:bg-white dark:focus:bg-gray-800"
                      required
                    />
                  </div>
                </div>

                <div>
                  <label
                    class="text-base font-medium text-gray-900 dark:text-gray-200"
                  >
                    Phone number
                  </label>
                  <div class="mt-2.5 relative">
                    <input
                      type="tel"
                      name="phone"
                      id="phone"
                      pattern="[0-9]{10,15}"
                      class="block w-full px-4 py-4 text-black dark:text-white placeholder-gray-500 dark:placeholder-gray-300 transition-all duration-200 border border-gray-200 dark:border-gray-700 rounded-md bg-gray-50 dark:bg-gray-900 focus:outline-none focus:border-blue-600 focus:bg-white dark:focus:bg-gray-800"
                      required
                      title="Please enter only numbers, at least 10 digits."
                    />
                  </div>
                </div>

                <div>
                  <label
                    class="text-base font-medium text-gray-900 dark:text-gray-200"
                  >
                    Company name
                  </label>
                  <div class="mt-2.5 relative">
                    <input
                      type="text"
                      name="companyName"
                      class="block w-full px-4 py-4 text-black dark:text-white placeholder-gray-500 dark:placeholder-gray-300 transition-all duration-200 border border-gray-200 dark:border-gray-700 rounded-md bg-gray-50 dark:bg-gray-900 focus:outline-none focus:border-blue-600 focus:bg-white dark:focus:bg-gray-800"
                    />
                  </div>
                </div>

                <div class="sm:col-span-2">
                  <label
                    class="text-base font-medium text-gray-900 dark:text-gray-200"
                  >
                    Message
                  </label>
                  <div class="mt-2.5 relative">
                    <textarea
                      name="message"
                      class="block w-full px-4 py-4 text-black dark:text-white placeholder-gray-500 dark:placeholder-gray-300 transition-all duration-200 border border-gray-200 dark:border-gray-700 rounded-md resize-y bg-gray-50 dark:bg-gray-900 focus:outline-none focus:border-blue-600 focus:bg-white dark:focus:bg-gray-800"
                      rows="4"
                      required></textarea>
                  </div>
                </div>

                <div class="sm:col-span-2">
                  <button
                    type="submit"
                    class="inline-flex items-center justify-center w-full px-4 py-4 mt-2 text-base font-semibold text-white transition-all duration-200 bg-blue-600 rounded-md hover:bg-blue-700 focus:outline-none focus:bg-blue-700"
                  >
                    Send
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>

        <!-- InformaciÃ³n de contacto y mapa -->
        <div class="bg-gray-100 dark:bg-gray-900 lg:col-span-2">
          <div class="h-full p-6 sm:p-10">
            <h4 class="text-2xl font-semibold text-black dark:text-white">
              Contact info
            </h4>

            <div class="mt-8 space-y-7">
              <div class="flex items-start">
                <svg
                  class="flex-shrink-0 text-blue-600 w-7 h-7"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <span
                  class="block ml-3 text-base text-gray-900 dark:text-gray-200"
                >
                  <a href={config.companyAddressLink} target="_blank">
                    {config.companyAddress}
                  </a>
                </span>
              </div>

              <div class="flex items-start">
                <svg
                  class="flex-shrink-0 text-blue-600 w-7 h-7"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
                <span
                  class="block ml-3 text-base text-gray-900 dark:text-gray-200"
                >
                  {config.companyEmail}
                </span>
              </div>

              <div class="flex items-start">
                <svg
                  class="flex-shrink-0 text-blue-600 w-7 h-7"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
                <div class="ml-3">
                  <a
                    href={about.section1.socialLink.url}
                    target="_blank"
                    title={about.section1.socialLink.text}
                    class="transition-all duration-200 text-green-500 hover:text-green-600 hover:underline"
                  >
                    {about.section1.socialLink.type}
                  </a>
                </div>
              </div>
            </div>
            <br />

            <div class="mt-8 lg:mt-auto">
              <iframe
                class="w-full h-[400px]"
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3641.6477270206033!2d-110.32496192566154!3d24.113880774726862!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x86afd2d6ddf6a651%3A0x458dfd72e7e73864!2sHilario%20P%C3%A9rez%20152%2C%20Revoluci%C3%B3n%2C%2023075%20La%20Paz%2C%20B.C.S.!5e0!3m2!1ses-419!2smx!4v1725570409312!5m2!1ses-419!2smx"
                width="auto"
                height="auto"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  function validateForm() {
    const phone = (document.getElementById("phone") as HTMLInputElement).value;
    const email = (document.getElementById("email") as HTMLInputElement).value;
    const phonePattern = /^[0-9]{10,15}$/;
    const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

    if (!phonePattern.test(phone)) {
      alert("Please enter a valid phone number (10-15 digits).");
      return false;
    }

    if (!emailPattern.test(email)) {
      alert("Please enter a valid email address.");
      return false;
    }

    return true;
  }
</script>
