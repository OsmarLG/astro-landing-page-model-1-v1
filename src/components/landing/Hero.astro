---
import {main} from "../../data/main.ts";

const {
  imageUrl,
  imageUrlAlt,
  headline,
  subheadline,
  secondImageUrl,
  secondImageUrlAlt,
} = main.hero;
---

<section
  class="relative h-[500px] flex items-center justify-center text-center bg-gradient-to-b from-black/60 via-black/40 to-transparent"
  style={`background: url(${imageUrl}) no-repeat center center; background-size: cover;`}
>
  <div
    class="bg-black bg-opacity-50 dark:bg-opacity-80 p-8 rounded-md flex flex-col md:flex-row items-center justify-between w-full max-w-6xl md:h-[400px]"
  >
    <div class="flex-shrink-0 mb-4 md:mb-0">
      <img src={imageUrl} class="max-h-28 mx-auto" alt={imageUrlAlt} />
    </div>

    <div class="flex flex-col text-left">
      <h1
        class="text-5xl md:text-6xl p-2 font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-blue-100 to-blue-400 dark:from-blue-400 dark:to-red-400"
      >
        {headline}
      </h1>
      {
        subheadline && (
          <h2 class="text-white text-lg h2-2 md:text-xl mt-4 mx-3">
            {subheadline}
          </h2>
        )
      }
    </div>

    <div class="flex-shrink-0">
      <img src={secondImageUrl} class="max-h-48" alt={secondImageUrlAlt} />
    </div>
  </div>
</section>
