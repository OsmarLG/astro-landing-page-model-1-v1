---
import Layout from "../layouts/Layout.astro";
import {es} from "../langs/es.ts";
import Hero from "../components/services/Hero.astro";
import ServicesA from "../components/services/Services.astro";
import Testimonials from "../components/services/Testimonials.tsx";

const {lang} = Astro.params;
const translations = lang === "es" ? es : es;
---

<Layout title="Servicios" lang={lang} translations={translations}>
  <div class="mt-10">
    <Hero />
    <ServicesA />
    <Testimonials client:load />
  </div>
</Layout>
